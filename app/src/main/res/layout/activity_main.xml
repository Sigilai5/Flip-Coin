<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="166dp"
        android:layout_marginBottom="62dp"
        android:layout_marginTop="51dp"
        android:clickable="true"
        android:onClick="heads"
        app:layout_constraintBottom_toBottomOf="@+id/sideView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/play2"
        app:srcCompat="@drawable/head" />

    <TextView
        android:id="@+id/play1"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginEnd="149dp"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="149dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="26dp"
        android:gravity="center_horizontal"
        android:text="Play:1"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/play2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/play2"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="26dp"
        android:gravity="center_horizontal"
        android:text="Play:2"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/play1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_marginBottom="57dp"
        android:clickable="true"
        android:onClick="tails"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sideView"
        app:srcCompat="@drawable/tail" />

    <TextView
        android:id="@+id/sideView"
        android:layout_width="112dp"
        android:layout_height="0dp"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="286dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="SIDE"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>